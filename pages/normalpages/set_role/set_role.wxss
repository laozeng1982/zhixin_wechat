/* pages/normalpages/change_role/change_role.wxss */

.page-title {
    width: 100%;
    height: 15%;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    text-align: center;
    font-size: 50rpx;
    font-weight: 500;
}

.form-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.items-container {
    width: 100%;
    height: 85%;
    display: flex;
    flex-direction: column;
}

.item-box {
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #eee;
}

.item-image {
    height: 90rpx;
    width: 90rpx;
    border-radius: 50%;
}

.item-text {
    padding-left: 60rpx;
    width: 200rpx;
}

.item-picker {
    padding-right: 60rpx;
    /* width: 300rpx; */
}

.checkbox-item {
    padding-left: 60rpx;
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.checkbox-item-text {
    padding-left: 60rpx;
    height: 100rpx;
    background: #fff;
    display: flex;
    font-size:32rpx;
    color: #888; 
    flex-direction: row;
    align-content: center;
    align-items: center;
}
