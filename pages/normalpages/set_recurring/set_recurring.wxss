/* pages/normalpages/set_recurring/set_recurring.wxss */

.radio-group {
    display: flex;
    width: 100%;
    height: 600rpx;
    flex-direction: column;
}

.content-box {
    width: 100%;
    display: flex;
    align-content: center;
    align-items: center;
    flex-direction: column;
}

.head-body-top {
    width: 100%;
    height: 90%;
}

.title-text {
    padding: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    text-align: center;
    font-size: 36rpx;
    font-weight: 400;
}

.day-selector {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
}

.day-box {
    width: 14.28%;
    height: 100rpx;
    display: flex;
    align-content: center;
    align-items: center;
    flex-direction: column;
    justify-content: space-around;
}

.day-item {
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-content: center;
    align-items: center;
    flex-direction: row;
    justify-content: space-around;
    border-radius: 50%;
    border: 1rpx dashed #888;
}

.day-item-selected {
    border: 1rpx solid #888;
    background: #888;
    color: #fff;
}

.day-item-tips {
    width: 100%;
    height: 30rpx;
    font-size: 24rpx;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    display: flex;
}