/* pages/userinfo/userinfo.wxss */

.userinfo-item-box {
    width: 100%;
    background: #fff;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #eee;
}

.userinfo-item-contanier {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 90rpx;
    padding-right: 40rpx;
    font-size: 32rpx;
}

.userinfo-item-input {
    display: flex;
    align-items: center;
    width: 400rpx;
    padding-right: 40rpx;
    text-align: right;
    font-size: 32rpx;
}

.userinfo-item-picker {
    display: flex;
    flex-direction: row;
    padding-right: 40rpx;
    font-size: 32rpx;
}

.userinfo-item-image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 40rpx;
}
