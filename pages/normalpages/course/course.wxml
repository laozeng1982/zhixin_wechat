<!--pages/course/course.wxml-->
<view class="container">

    <view class='gray-space'></view>

    <!-- bindreset="onFormReset" -->
    <form class='form-container' bindsubmit="onFormSubmit">
        <view class='items-container'>

            <!-- 课程名设置 -->
            <view class="item-box row">
                <view class='item-name'>
                    {{displayItems[0].name}}
                </view>
                <view class='item-input'>
                    <input id="{{displayItems[0].id}}" name="{{displayItems[0].id}}" type='text' placeholder='{{displayItems[0].tip}}'> </input>
                </view>

            </view>

            <!-- 上课地点设置 -->
            <view class="item-box row">
                <view class='item-name'>
                    {{displayItems[1].name}}
                </view>

                <view class='item-picker' bindtap='onChooseLocation'>
                    <view id="{{displayItems[1].id}}" name="{{displayItems[1].id}}" > {{selectedLocation.name}} </view>
                    <image class='image-arrow' src='../../image/right_arrow.png'></image>
                </view>

            </view>

            <!-- 课程开始日期 -->
            <view class="item-box row">
                <view class='item-name'>
                    {{displayItems[2].name}}
                </view>

                <picker id="{{displayItems[2].id}}" name="{{displayItems[2].id}}" mode='date' bindchange='onPickerChange'>
                    <view class='item-picker'>
                        <view class='item-picker-text'>{{displayItems[2].component.value}}</view>
                        <image class='image-arrow' src='../../image/down_arrow.png'></image>
                    </view>
                </picker>
            </view>

            <!-- 课程结束日期 -->
            <view class="item-box row">
                <view class='item-name'>
                    {{displayItems[3].name}}
                </view>

                <picker id="{{displayItems[3].id}}" name="{{displayItems[3].id}}" mode='date' bindchange='onPickerChange'>
                    <view class='item-picker'>
                        <view class='item-picker-text'>{{displayItems[3].component.value}}</view>
                        <image class='image-arrow' src='../../image/down_arrow.png'></image>
                    </view>
                </picker>
            </view>

            <!-- 重复规则 -->
            <view class="item-box row">
                <view class='item-name'>
                    {{displayItems[4].name}}
                </view>

                <view id="{{displayItems[4].id}}" name="{{displayItems[4].id}}" class='item-picker' bindtap='onSetRecurringRules'>
                    <view class='item-picker-text'>{{displayItems[4].component.value}}</view>
                    <image class='image-arrow' src='../../image/right_arrow.png'></image>
                </view>

                <!-- <picker id="{{displayItems[4].id}}" name="{{displayItems[4].id}}" mode='multiSelector' range='{{recurringRuleArray}}' value="{{recurringRuleIdx}}" bindchange='onPickerChange' bindcolumnchange="onPeriodPickerColumnChange">
                    <view class='item-picker'>
                        <view class='item-picker-text'>{{displayItems[4].component.value}}</view>
                        <image class='image-arrow' src='../../image/right_arrow.png'></image>
                    </view>
                </picker> -->
            </view>

            <!-- 每次课开始的时间 -->
            <view class="item-box row">
                <view class='item-name'>
                    {{displayItems[5].name}}
                </view>

                <picker id="{{displayItems[5].id}}" name="{{displayItems[5].id}}" mode='time' bindchange='onPickerChange'>
                    <view class='item-picker'>
                        <view class='item-picker-text'>{{displayItems[5].component.value}}</view>
                        <image class='image-arrow' src='../../image/down_arrow.png'></image>
                    </view>
                </picker>
            </view>

            <!-- 每次课时间长度 -->
            <view class="item-box row">
                <view class='item-name'>
                    {{displayItems[6].name}}
                </view>

                <picker id="{{displayItems[6].id}}" name="{{displayItems[6].id}}" mode='selector' value="{{timeListIdx}}" range='{{timeList}}' bindchange='onPickerChange'>
                    <view class='item-picker'>
                        <view class='item-picker-text'>{{timeList[timeListIdx]}} </view>
                        <image class='image-arrow' src='../../image/down_arrow.png'></image>
                    </view>
                </picker>
            </view>

            <!-- 上课学生人数上限 -->
            <view class="item-box row">
                <view class='item-name'>
                    {{displayItems[7].name}}
                </view>
                <view class='item-input'>
                    <input id="{{displayItems[7].id}}" name="{{displayItems[7].id}}" type='number' placeholder='{{displayItems[7].tip}}'> </input>
                </view>
            </view>

            <!-- 文本输入框 -->
            <view class="item-box column">
                <view class='item-name'>
                    {{displayItems[8].name}}
                </view>
                <view class='item-textarea'>
                    <textarea id="{displayItems[8].id}}" name="{{displayItems[8].id}}" class='decription-item-text' show-confirm-bar='{{false}}' type='text' placeholder='{{displayItems[8].tip}}'></textarea>
                </view>
            </view>

        </view>

        <view class="foot-box">
            <!-- <button class='reset-btn' type='default' size='default' formType="reset">重置</button> -->
            <button class='confirm-btn' type='primary' size='default' formType="submit">确定</button>
        </view>
    </form>

</view>