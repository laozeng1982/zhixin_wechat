/* pages/course/course.wxss */

.item-box {
    width: 100%;
    background: #fff;
    display: flex;
    align-content: center;
    align-items: center;
    /* justify-content: space-between; */
    border-bottom: 1rpx solid #eee;
}

.item-name {
    display: flex;
    align-items: center;
    height: 90rpx;
    /* width: 300rpx; */
    margin-left: 20rpx;
    font-size: 32rpx;
}

.item-value {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 90rpx;
    width: 100%;
    margin-right: 20rpx;
    font-size: 32rpx;
}

.item-value-input {
    display: flex;
    align-items: center;
    width: 100%;
    margin-right: 60rpx;
    text-align: right;
    font-size: 32rpx;
    justify-content: flex-end;
}

.item-value-picker {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 90rpx;
    font-size: 32rpx;
}

.item-value-picker-text {
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: space-around;
    text-align: right;
    font-size: 32rpx;
}

.picker-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 100rpx;
    padding-right: 60rpx;
}

.image-arrow {
    width: 60rpx;
    height: 60rpx;
}

.item-input-text {
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: space-around;
    text-align: right;
    font-size: 32rpx;
}

.item-text {
    display: flex;
    align-items: center;
    align-content: center;
    font-size: 32rpx;
    width: 100%;
}

.item-image {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 90rpx;
    margin-right: 0;
    font-size: 32rpx;
}
