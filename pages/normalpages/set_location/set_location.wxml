<!--pages/normalpages/set_location/set_location.wxml-->

<view class="container">

    <view class='gray-space'></view>

    <form class='form-container' bindsubmit="onFormSubmit" bindreset="onFormReset">
        <view class='items-container'>

            <!-- 角色设置 -->
            <view class='items-container'>
                <view class='item-box'>
                    <text>当前选择的位置：{{userLocation.name}}</text>
                </view>

                <view class='item-box'>
                    <text>{{userLocation.address}}</text>
                </view>
            </view>

        </view>

        <view class='gray-space'></view>

        <map id="map" longitude="{{userLocation.longitude}}" latitude="{{userLocation.latitude}}" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location
            style="width: 100%; height: 300px;"></map>

        <view class="foot-box">
            <button class='reset-btn' type='default' size='default' formType="reset">重置</button>
            <button class='confirm-btn' type='primary' size='default' formType="submit">保存</button>
        </view>
    </form>

</view>