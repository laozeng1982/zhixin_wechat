/* settings.wxss */

.setting-page-scroll {
    width: 100%;
     height: 100%; 
    display: flex;
    flex-direction: column;
    background-color: #eee;
}

.upper-box {
    width: 100%;
    height: 350rpx;
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    background-color: #545454;
    color: #fff;
}

.userInfo-avatar-image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    box-sizing: border-box;
    margin-top: 70rpx;
}

.userInfo-name {
    padding-top: 20rpx;
}

.settings-container {
    position: relative;
    top: -40rpx;
    width: 90%;
    left: 5%;
    background-color: #fff;
}

.setting-brief-title {
    width: 100%;
    height: 80rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    text-align: center;
    border-bottom: 1rpx solid #eee;
}

.setting-brief-box {
    width: 100%;
    height: 120rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}

.exercise-brief-box {
    width: 100%;
    font-size: 30rpx;
    text-align: center;
}

.setting-items-container {
    height: 80rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #eee;
}

.setting-item-box {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    padding-left: 40rpx;
}

.setting-item-image {
    width: 45rpx;
    height: 45rpx;
    box-sizing: border-box;
}

.setting-item-text {
    font-size: 34rpx;
    padding-left: 40rpx;
}

.setting-item-arrow-imag {
    height: 40rpx;
    width: 40rpx;
}

.item-avatar-md image {
    float: left;
    width: 85rpx;
    height: 85rpx;
    box-sizing: border-box;
}

.item-avatar-sm image {
    float: left;
    width: 65rpx;
    height: 65rpx;
    box-sizing: border-box;
}

.wa-item-ava .item-img-round {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
}

.wa-item-thumbnail-left {
    padding-left: 100px;
    min-height: 100px;
}

.wa-item-thumbnail-left .item-img {
    position: absolute;
    top: 10px;
    left: 10px;
    width: 80px;
    height: 80px;
}

.wa-item-thumbnail-right {
    padding-right: 100px;
    min-height: 100px;
}

.wa-item-thumbnail-right .item-img {
    position: absolute;
    top: 10px;
    right: 10px;
    width: 80px;
    height: 80px;
}

.wa-item:active {
    background-color: #e5e5e5;
}

.wa-item .icon-left {
    float: left;
    font-size: 20px;
    line-height: 20px;
}

.wa-item .icon-right {
    float: right;
    font-size: 20px;
    line-height: 20px;
    opacity: 0.4;
}

.wa-item-thumbnail-left .icon-right {
    float: right;
    font-size: 20px;
    line-height: 80px;
    opacity: 0.4;
}

.wa-item-ava .icon-right {
    float: right;
    font-size: 20px;
    line-height: 40px;
    opacity: 0.4;
}

.icon-left::before {
    width: 20px;
}

.icon-right::before {
    width: 20px;
}

/*button*/

.wa-button {
    border-color: #b2b2b2;
    background-color: #f8f8f8;
    color: #444;
    position: relative;
    display: inline-block;
    margin: 0;
    padding: 0 12px;
    min-width: 120rpx;
    min-height: 40px;
    border-width: 1px;
    border-style: solid;
    border-radius: 2px;
    vertical-align: top;
    text-align: center;
    text-overflow: ellipsis;
    font-size: 16px;
    line-height: 38px;
}

.wa-button-block {
    width: 100%;
}

.wa-button-sm {
    padding: 0 8px;
    min-width: 90rpx;
    min-height: 28px;
    font-size: 12px;
    line-height: 26px;
}

.wa-button-lg {
    padding: 0 16px;
    min-width: 150rpx;
    min-height: 52px;
    font-size: 20px;
    line-height: 48px;
}

.wa-button:active {
    border-color: #999;
    background: #ccc;
    color: #444;
}

/*.wa-button-dark:active{
  background: #333;
  color: #eee
}*/

.wa-button-outline {
    border-color: #b2b2b2;
    background: transparent;
    color: #b2b2b2;
}

.wa-button .icon-left {
    padding-right: 8rpx;
    font-size: 36rpx;
}

.wa-button-sm .icon-left {
    padding-right: 5px;
    font-size: 26rpx;
}

.wa-button-lg .icon-left {
    padding-right: 5px;
    font-size: 46rpx;
}

.wa-button .icon-right {
    float: right;
    line-height: 38px;
    padding-left: 5px;
    font-size: 36rpx;
}

.wa-button-sm .icon-right {
    float: right;
    line-height: 26px;
    padding-left: 5px;
    font-size: 22rpx;
}

.wa-button-lg .icon-right {
    float: right;
    line-height: 48px;
    padding-left: 5px;
    font-size: 46rpx;
}

/*input*/

.wa-input {
    display: block;
    height: 34px;
    color: #111;
    font-size: 14px;
    line-height: 16px;
    flex: 1;
}

.wa-input-item {
    display: flex;
    padding: 20rpx;
    border: 1px solid #ddd;
    margin: -1px 0;
}

.wa-input-label {
    flex: 0 0 100px;
    font-size: 14px;
    line-height: 26px;
    font-weight: bold;
    padding: 4px 0;
}

.wa-input-stacked {
    padding: 20rpx;
}

.wa-input-stacked input {
    width: 100%;
}

.wa-input-icon {
    padding: 5px;
    padding-left: 44px;
    position: relative;
    border: 1px solid #ddd;
    border-radius: 3px;
}

.wa-input-icon .icon-left {
    text-align: center;
    position: absolute;
    top: 5px;
    left: 5px;
    width: 34px;
    height: 34px;
    line-height: 34px;
    font-size: 20px;
}

.placeholder-icon {
    color: #aaa;
}

