/**index.wxss**/

.tab {
    height: 10%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.tab-list {
    font-size: 36rpx;
    font-weight: 300;
    color: #888;
    display: inline-block;
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-bottom: 10rpx solid #fff;
}

.current-highlight {
    font-weight: 400;
    color: #000;
    border-bottom: 10rpx solid #000;
}

.unselected {
    color: #888;
}

.tab-item {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}

/* 以下是course页面样式 */

.course-tab-container {
    display: flex;
    height: 100rpx;
    width: 100%;
    flex-direction: row;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #888;
}

.course-content {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    align-content: center;
    align-items: center;
}

.course-create-contanier {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    align-content: center;
    align-items: center;
    justify-content: flex-start;
    padding-top: 200rpx;
}

.course-create-image-btn {
    height: 128rpx;
    width: 128rpx;
}

.course-create-text {
    display: flex;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    padding-top: 40rpx;
}

.course-tab-item {
    width: 200rpx;
     margin-left: 40rpx; 
    /* margin-right: 40rpx; */
}

.scroll-view-container {
    height: 10%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.course-content-container {
    display: flex;
    width: 100%;
    flex-direction: column;
    align-content: center;
    align-items: center;
}

.course-list-item-container {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.course-list-item-name {
    display: flex;
    align-items: center;
    height: 90rpx;
    width: 300rpx;
    padding-left: 20rpx;
    font-size: 32rpx;
}

.course-list-item-value {
    display: flex;
    align-items: center;
    height: 90rpx;
    width: 100%;
    padding-left: 20rpx;
    font-size: 32rpx;
}

/* 日历样式 */

.date-control-box {
    display: flex;
    width: 100%;
    justify-content: flex-start space-between;
    height: 120rpx;
    align-items: center;
    align-content: center;
}

.date-picker-box {
    display: flex;
    flex-direction: row;
    align-items: center;
    align-content: center;
    justify-content: space-between;
    /* width: 500rpx; */
    height: 100rpx;
}

.date-picker-item-text {
    display: flex;
    width: 150rpx;
    justify-content: center;
}

.month-box {
    display: flex;
    justify-content: space-around;
    width: 100rpx;
    height: 50rpx;
    z-index: 100;
    border-radius: 5%;
    padding-right: 40rpx;
}

.month-item {
    display: flex;
    justify-content: space-around;
    align-items: center;
    align-content: center;
    height: 50rpx;
    width: 200rpx;
    border-radius: 25rpx;
    border: 1rpx solid #888;
    z-index: 100;
}

.calendar-panel {
    width: 100%;
    /* height: 100%; */
    border-bottom: 1rpx solid #ececec;
}

.calendar-box {
    width: 100%;
    /* background: #eee; */
    overflow: hidden;
    border-bottom: 1rpx solid #ececec;
    display: flex;
    justify-content: space-around;
    /* font-weight: 500; */
}

.calendar-month-box {
    width: 100%;
    background: #fff;
    overflow: hidden;
    border-bottom: 1rpx solid #ececec;
    display: flex;
    justify-content: space-around;
    height: 120rpx;
}

.month-label {
    /* width: 14.28%; *//* position: relative; */
    float: left;
    text-align: center;
    font-size: 40rpx;
    /* padding: 10rpx 0; */
    display: flex;
    justify-content: space-around;
    height: 50rpx;
    width: 120rpx;
    padding: 30rpx;
}

.calendar-box-header {
    width: 100%;
    /* background: #b2b2b2; */
    overflow: hidden;
    border-bottom: 1rpx solid #ececec;
    display: flex;
}

.weekday-view-box {
    width: 100%;
    height: 1000rpx;
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
