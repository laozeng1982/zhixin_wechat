/**index.wxss**/

.tab {
    height: 10%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.tab-list {
    font-size: 36rpx;
    font-weight: 300;
    color: #888;
    display: inline-block;
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-bottom: 10rpx solid #fff;
}

.current-highlight {
    font-weight: 400;
    color: #000;
    border-bottom: 10rpx solid #000;
}

.unselected {
    color: #888;
}

.tab-item {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}

/* 以下是course页面样式 */

.course-tab-container {
    display: flex;
    height: 100rpx;
    width: 100%;
    flex-direction: row;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    border-bottom: 1rpx solid #888;

}

.course-content {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    align-content: center;
    align-items: center;
}

.course-create-contanier {
    display: flex;
    width: 100%;
    height: 100%;
    flex-direction: column;
    align-content: center;
    align-items: center;
    justify-content: flex-start;
    padding-top: 200rpx;
}

.course-create-image-btn {
    height: 128rpx;
    width: 128rpx;
}

.course-create-text {
    display: flex;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    padding-top: 40rpx;
}

.course-tab-item {
    width: 230rpx;
    margin-left: 40rpx;
    /* margin-right: 40rpx; */
}

.scroll-view-container {
    height: 10%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

