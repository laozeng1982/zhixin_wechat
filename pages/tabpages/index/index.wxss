/**index.wxss**/

.tab {
    height: 10%;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}

.tab-list {
    font-size: 36rpx;
    font-weight: 300;
    color: #888;
    display: inline-block;
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    border-bottom: 10rpx solid #fff;
}

.current-highlight {
    font-weight: 400;
    color: #000;
    border-bottom: 10rpx solid #000;
}

.plan-item-header {
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    align-content: center;
}

.plan-item-purpose {
    display: flex;
    flex-direction: row;
    height: 60rpx;
    font-size: 30rpx;
}

.purpose-item {
    display: flex;
    text-align: center;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    padding-left: 5rpx;
}

.purpose-item-header {
    display: flex;
    text-align: center;
    justify-content: space-around;
    align-content: center;
    align-items: center;
    padding-left: 40rpx;
}

.plan-item-image {
    width: 100%;
    display: flex;
    align-items: center;
    align-content: center;
    justify-content: space-around;
}

.cover-image {
    width: 750rpx;
    height: 500rpx;
}

.swiper-box {
    width: 100%;
    height: 900rpx;
    display: flex;
    align-content: center;
    align-items: center;
}

.tab-item {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}

.course-tab-container {
    display: flex;
    height: 100rpx;
    width: 100%;
    flex-direction: row;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.course-tab-item {
    width: 230rpx;
    margin-left: 40rpx;
    /* margin-right: 40rpx; */
}

.unselected {
    color: #888;
}

.create-image-btn {
    height: 256rpx;
    width: 256rpx;
}

.create-text {
    display: flex;
    justify-content: space-around;
    align-content: center;
    align-items: center;
}
