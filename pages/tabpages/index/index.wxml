<!--index.wxml-->
<!-- 超级复杂的页面 -->
<view class="container">
    <!-- Tab头 -->
    <view class="tab">
        <block wx:for="{{indexTabData}}" wx:key="{{index}}">
            <view class="tab-list {{currentTabIdx===index ? 'current-highlight': ''}}" data-current="{{index}}" bindtap="onIndexTabSwitch">{{item.name}}</view>
        </block>
    </view>

    <view class='gray-space'></view>

    <!-- 以下是Tab内容 -->

    <!-- 1、课程tab -->
    <view wx:if="{{indexTabData[0].selected}}" class='tab-item'>

        <!-- 次级标签 -->
        <view class='course-tab-container'>
            <label wx:for="{{courseTabData}}" wx:key="{{index}}">
                <view wx:if="{{item.display}}" id="{{item.type}}" class="course-tab-item {{item.selected?'':'unselected'}}" bindtap='onCourseTabItemSelected'>
                    {{item.name}}
                </view>
            </label>
        </view>

        <!-- 所有课程标签 -->
        <view wx:if="{{courseTabData[0].selected}}" class='course-content'>

            <!-- 1.1、没有课程的时候 -->
            <view wx:if="{{userInfoLocal.teacherCourseSet.length === 0}}" class='course-content'>

                <view class='course-create-contanier' bindtap='onCreatedNewCourse'>
                    <image class='course-create-image-btn' src='../../image/plus_64px1.png'> </image>
                    <view class='course-create-text'>
                        <text>创建课程</text>
                    </view>
                </view>

            </view>

            <!-- 1.2、有课程，显示列表 -->
            <scroll-view wx:else class="scroll-view-container" scroll-y style="width: 100%">
                <view id='{{index}}' wx:for='{{userInfo.teacherCourseSet}}' wx:key='{{index}}' class='course-content-container' bindtap='onCourseSelected'>
                    <!-- 第一行 -->
                    <view class='course-list-item-container'>
                        <view class='course-list-item-name'>
                            课程名字：
                        </view>
                        <view class='course-list-item-value'>
                            {{item.name}}
                        </view>
                    </view>
                    <!-- 第二行 -->
                    <view class='course-list-item-container'>
                        <view class='course-list-item-name'>
                            上课时间：
                        </view>
                        <view class='course-list-item-value'>
                            {{item.startTime}}
                        </view>
                    </view>
                    <!-- 第三行 -->
                    <view class='course-list-item-container'>
                        <view class='course-list-item-name'>
                            上课地址：
                        </view>
                        <view class='course-list-item-value'>
                            {{item.location.address}}
                        </view>
                    </view>
                    <view class='gray-space-small'></view>
                </view>

            </scroll-view>

        </view>

        <!-- 点击每日课程 -->
        <view wx:if="{{courseTabData[1].selected}}" class='course-content'>
            <!-- 日历控制 -->
            <view class="date-control-box" bindtap='onCalendarHead'>
                <picker mode="date" value="{{selectedDate}}" start="2015-09-01" end="2099-12-31" bindchange="onSelectMonthYear">
                    <view class="date-picker-box">
                        <view class='date-picker-item-text'>
                            <text>{{currentYear}} 年</text>
                        </view>

                        <view class='date-picker-item-text'>
                            <text>{{currentMonth}} 月</text>
                        </view>
                    </view>
                </picker>

                <view class='month-box' bindtap="onToThisMonth">
                    <view class="month-item {{currentMonth!==todayMonth || currentYear!==todayYear?'this-month':''}} ">本月</view>
                </view>
            </view>

            <!-- 日历头 -->
            <view class="calendar-panel" bindtap='onCalendarHead'>
                <view class="calendar-box">
                    <view class="calendar-weekday-head calendar-rest-day">日</view>
                    <view class="calendar-weekday-head">一</view>
                    <view class="calendar-weekday-head">二</view>
                    <view class="calendar-weekday-head">三</view>
                    <view class="calendar-weekday-head">四</view>
                    <view class="calendar-weekday-head">五</view>
                    <view class="calendar-weekday-head calendar-rest-day">六</view>
                </view>
            </view>

            <!-- 默认日历列表，按月显示日历 -->
            <view class='weekday-view-box' wx:if="{{showMonthView}}">
                <swiper class="calender-swiper" indicator-dots="{{false}}" vertical="true" circular="{{true}}" autoplay="{{false}}" bindchange="onVerticalSwiperChange">
                    <block wx:for="{{calendars}}" wx:key="{{index}}">
                        <swiper-item id="{{item}}">
                            <!-- 正常的日历面板 -->
                            <view class="calendar-panel">
                                <!-- 日历中每天的显示 -->
                                <view class="calendar-box" wx:for="{{dateList}}" wx:key="{{index}}" wx:for-item="week">
                                    <view class="calendar-weekday-normal" wx:for="{{week}}" wx:key="{{index}}" data-date="{{item}}" bindtap="onSelectDateItem">

                                        <!-- 日历上每天的日期 -->
                                        <view class='calender-date-item'>
                                            <view class="{{item.value==selectedDate?'active_date':'nomal_date'}} {{!item.inThisMonth?'not_in_this_month_date':''}}">
                                                {{item.date}}
                                            </view>
                                        </view>

                                        <!-- 日历每天下段标注 -->
                                        <view class='calender-date-marker' wx:if="{{item.hasPlan}}">
                                            {{item.planPartsStr}}
                                        </view>

                                    </view>
                                </view>
                            </view>
                        </swiper-item>
                    </block>
                </swiper>
            </view>

            <!-- 当选中某一天，按周显示日历，同时显示这天的具体课程 -->
            <view wx:else class='weekday-view-box'>

                <!-- 按周显示的日历面板 -->
                <view class="calendar-panel">

                    <!-- 日历中每天的显示，只循环当前选中这一周 -->
                    <view class="calendar-box">
                        <view class="calendar-weekday-normal" wx:for="{{selectedWeek}}" wx:key="{{index}}" data-date="{{item}}" bindtap="onSelectDateItem">

                            <!-- 日历上每天的日期 -->
                            <view class='calender-date-item'>
                                <view class="{{item.value==selectedDate?'active_date':'nomal_date'}} {{!item.inThisMonth?'not_in_this_month_date':''}}">
                                    {{item.date}}
                                </view>
                            </view>

                            <!-- 日历每天下段标注 -->
                            <view class='calender-date-marker' wx:if="{{item.hasPlan}}">
                                {{item.planPartsStr}}
                            </view>
                        </view>
                    </view>
                </view>

                <view class='gray-space-small'></view>

                <!-- 当点击日历时，这里显示部位和动作信息 -->
                <scroll-view class="scrollviewVertical_Preview" scroll-y="true">
                    <!--  循环每个部位 -->
                    <view id="{{item.name}}" class='partContainerColumn' wx:for="{{selectedDateCourse}}" wx:key="{{index}}">
                        <text class='textBig'>{{item.name}}</text>
                        <!-- 循环每个部位的动作 -->
                        <view id="{{item.name}}" class='actionContainer padding' wx:for="{{item.exerciseSet}}" wx:key="{{index}}">
                            <!-- 图片占位 -->
                            <image class='actionImage' src="../../{{item.action.imageUrl}}"></image>

                            <view class='actionItem'>
                                <view class='header'>
                                    <view>{{item.action.name}}</view>
                                </view>
                            </view>
                        </view>
                        <view class='gray-space-small'></view>
                    </view>

                </scroll-view>

            </view>
        </view>

    </view>

    <!-- 2、通知tab -->
    <view wx:if="{{indexTabData[1].selected}}" class='tab-item'>



    </view>

    <!-- 3、作业tab -->
    <view wx:if="{{indexTabData[2].selected}}" class='tab-item'>
        {{indexTabData[2].type}}
        <button type='primary' bindtap='onReviewHomework'>批改作业Test</button>
        <view>
            {{indexTabData[0].type}}
        </view>
        <button type='primary' bindtap='onReviewLesson'>评价课堂表现Test</button>
    </view>

</view>