/**app.wxss**/

/* 全局通用的一些样式 */

button {
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    width: 90%;
}

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

.head-box {
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
    align-items: center;
    background: #fff;
}

.row {
    flex-direction: row;
}

.column {
    flex-direction: column;
}

/* 底部按钮部分 */

.foot-box {
    bottom: 0;
    width: 100%;
    height: 120rpx;
    justify-content: space-around;
    flex-direction: row;
    align-content: center;
    align-items: center;
    display: flex;
}

/* 底部按钮 */

.cancel-btn {
    width: 340rpx;
    color: #666;
    text-align: center;
}

.reset-btn {
    width: 340rpx;
    color: #666;
    text-align: center;
}

.confirm-btn {
    width: 340rpx;
    color: #353535;
    background: #09bb07;
    text-align: center;
}

.single-confirm-btn {
    width: 90%;
    color: #353535;
    background: #09bb07;
    text-align: center;
}

/* 灰色空行 */

.gray-space {
    width: 100%;
    background: #eee;
    height: 32rpx;
    min-height: 32rpx;
}

.gray-space-small {
    width: 100%;
    height: 16rpx;
    background: #eee;
    min-height: 16rpx;
}

/* 表单类页面 */

.page-title {
    width: 100%;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    text-align: center;
    font-size: 40rpx;
    /* font-weight: 500; */
}

.form-container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.items-container {
    width: 100%;
    /* height: 85%; */
    display: flex;
    flex-direction: column;
}

.item-box {
    width: 100%;
    background: #fff;
    display: flex;
    align-content: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #eee;
}

.item-image {
    height: 90rpx;
    width: 90rpx;
    border-radius: 50%;
}

.item-text {
    display: flex;
    padding-left: 60rpx;
    width: 200rpx;
    height: 100rpx;
    align-items: center;
}

.item-name {
    display: flex;
    align-items: center;
    height: 90rpx;
    width: 300rpx;
    padding-left: 20rpx;
    font-size: 32rpx;
}

.item-picker {
    display: flex;
    flex-direction: row;
    align-items: center;
    height: 90rpx;
    padding-right: 20rpx;
    font-size: 32rpx;
    /* width: 300rpx; */
}

.item-input {
    display: flex;
    align-items: center;
    width: 400rpx;
    padding-right: 40rpx;
    text-align: right;
    font-size: 32rpx;
}

.item-textarea {
    padding-left: 60rpx;
    height: 200rpx;
    background: #fff;
    display: flex;
    font-size: 32rpx;
    color: #888;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.performance-item-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 5%;
}

.checkbox-item {
    padding-left: 60rpx;
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.checkbox-item-text {
    padding-left: 60rpx;
    height: 200rpx;
    background: #fff;
    display: flex;
    font-size: 32rpx;
    color: #888;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.performance-item {
    padding-left: 60rpx;
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.performance-item-text {
    padding-left: 60rpx;
    height: 200rpx;
    background: #fff;
    display: flex;
    font-size: 32rpx;
    color: #888;
    flex-direction: row;
    align-content: center;
    align-items: center;
}

.image-btn-group {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
}

.image-btn-item {
    height: 100rpx;
    width: 100rpx;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
}

.image-btn {
    height: 60rpx;
    width: 60rpx;
}

.small-btn {
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: space-around;
    height: 60rpx;
    width: 100rpx;
    font-size: 22rpx;
}

/* 评论语音样式 */

.audio-file-container {
    display: flex;
    justify-content: space-between;
    align-content: center;
    align-items: center;
    flex-direction: row;
    height: 100rpx;
}

.audio-file-item-voice {
    border: 1rpx solid #888;
    border-radius: 5rpx;
    padding-left: 40rpx;
}

.audio-file-item-text {
    padding-right: 40rpx;
}

.audio-file-item-icon {
    padding-right: 40rpx;
}

/* 评论的图片样式 */

.image-file-container {
    display: flex;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    flex-direction: row;
    height: 200rpx;
    width: 100%;
}

/* 评论的视频样式 */

.video-file-container {
    display: flex;
    justify-content: flex-start;
    align-content: center;
    align-items: center;
    flex-direction: row;
    height: 200rpx;
    width: 100%;
}

.decription-item-text {
    height: 200rpx;
    background: #fff;
    display: flex;
    font-size: 32rpx;
    flex-direction: row;
    align-content: center;
}
